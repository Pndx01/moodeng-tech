# Enable RewriteEngine
RewriteEngine On

# Proxy /api requests to Node.js server on port 3000
# When accessed from /moodeng_tech/src/...
RewriteRule ^src/api/(.*)$ http://localhost:3000/api/$1 [P,L]
RewriteRule ^api/(.*)$ http://localhost:3000/api/$1 [P,L]

# Handle uploads folder - proxy to Node.js
RewriteRule ^src/uploads/(.*)$ http://localhost:3000/uploads/$1 [P,L]
RewriteRule ^uploads/(.*)$ http://localhost:3000/uploads/$1 [P,L]
